
<div style="padding-top : 5%" align="center">
    <form action="/home/update" method="post">
        <div>
            <label>ID</label>
            <input type="text" name="CustomerID" value=@Model.CustomerID /> 
        </div>

        <div>
            <label>Name</label>
            <input type="text" name="ContactName" value=@Model.ContactName />
        </div>

        <div>
            <label>Title</label>
            <input type="text" name="ContactTitle" value=@Model.ContactTitle />
        </div>

        <div>
            <label>Company</label>
            <input type="text" name="CompanyName" value=@Model.CompanyName />
        </div>

        <div>
            <label>Address</label>
            <input type="text" name="Address" value=@Model.Address />
        </div>

        <div>
            <label>City</label>
            <input type="text" name="City" value=@Model.City />
        </div>

        <div>
            <label>Region</label>
            <input type="text" name="Region" value=@Model.Region />
        </div>

        <div>
            <label>PostalCode</label>
            <input type="text" name="PostalCode" value=@Model.PostalCode />
        </div>

        <div>
            <label>Country</label>
            <input type="text" name="Country" value=@Model.Country />
        </div>

        <div>
            <label>Phone</label>
            <input type="text" name="Phone" value=@Model.Phone />
        </div>

        <div>
            <label>Fax</label>
            <input type="text" name="Fax" value=@Model.Fax />
        </div>

        <button type="submit">Submit</button>
    </form>
</div>